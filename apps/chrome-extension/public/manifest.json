{
  "name": "Kindle Highlights",
  "description": "Kindle Highlights Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["tabs", "cookies", "offscreen"],
  "host_permissions": ["https://read.amazon.com/*", "http://localhost:3000/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
